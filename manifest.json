{
  "manifest_version": 3,
  "name": "PoE Wiki Search",
  "version": "1.0",
  "description": "Open a popup to make a quick search on https://www.poewiki.net/",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PoE Wiki Search",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+W"
      }
    }
  },
  "permissions": ["tabs"]
}